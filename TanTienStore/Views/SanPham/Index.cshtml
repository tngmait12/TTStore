@model IEnumerable<TanTienStore.Models.SanPhamModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Quản Lý Sản Phẩm</h2>
                <p>
                    <a class="btn btn-primary btn-sm" asp-action="Create">Thêm mới</a>
                </p>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Sản Phẩm</h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Tên Sản Phẩm
                                    </th>
                                    <th>
                                        Đơn Vị Tính
                                    </th>
                                    <th>
                                        Giá Bán
                                    </th>
                                    <th>
                                        Loại Sản Phẩm
                                    </th>
                                    <th>
                                        Hình Ảnh
                                    </th>
                                    <th>
                                        Số Lượng
                                    </th>
                                    <th>Control</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.MaSP
                                        </td>
                                        <td>
                                            @item.TenSanPham
                                        </td>
                                        <td>
                                            @item.DonViTinh
                                        </td>
                                        <td>
                                            @item.GiaBan
                                        </td>
                                        <td>
                                            @item.LoaiSanPham.Name
                                        </td>
                                        <td>
                                            <img src="~/assets/images/@item.HinhAnh" style="height: 50px; width: 100px; object-fit: contain" />
                                        </td>
                                        <td>
                                            @item.SoLuong
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MaSP">Sửa</a> |
                                            <a asp-action="Details" asp-route-id="@item.MaSP">Chi tiết</a> |
                                            <a asp-action="Delete" asp-route-id="@item.MaSP">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Tên Sản Phẩm</th>
                                    <th>Đơn Vị Tính</th>
                                    <th>Giá Bán</th>
                                    <th>Loại Sản Phẩm</th>
                                    <th>Hình Ảnh</th>
                                    <th>Số Lượng</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end basic table  -->
        <!-- ============================================================== -->
</div>

