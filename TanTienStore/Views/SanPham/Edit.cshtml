@model TanTienStore.Models.SanPhamModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid  dashboard-content">
    <h1>Cập Nhật</h1>

    <h4>Sản Phẩm</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSP" />
                <div class="form-group">
                    <label asp-for="TenSanPham" class="control-label">Tên Sản Phẩm</label>
                    <input asp-for="TenSanPham" class="form-control" />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DonViTinh" class="control-label">Đơn Vị Tính</label>
                    <input asp-for="DonViTinh" class="form-control" />
                    <span asp-validation-for="DonViTinh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiaBan" class="control-label">Giá Bán</label>
                    <input asp-for="GiaBan" class="form-control" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoaiSanPhamId" class="control-label">Loại Sản Phẩm</label>
                    <select asp-for="LoaiSanPhamId" class="form-control" asp-items="ViewBag.LoaiSanPhamId"></select>
                    <span asp-validation-for="LoaiSanPhamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                    <input asp-for="HinhAnh" class="form-control" style="display: none" />
                    <img src="~/assets/images/@Model.HinhAnh" style="height: 100px; width: 200px; object-fit: contain" />
                    <input name="ImgUpload" type="file" accept="image/gif, image/jpeg, image/png" />
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-success btn-sm" asp-action="Index">Trở về</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
