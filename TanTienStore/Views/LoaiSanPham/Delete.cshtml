@model TanTienStore.Models.LoaiSanPhamModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid  dashboard-content">
    <h1>Xóa</h1>

    <h3>Bạn có chắc chắn muốn xóa loại sản phẩm này không?</h3>
    <div>
        <h4>Loại Sản Phẩm</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Tên Loại Sản Phẩm:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="LoaiSPId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-success btn-sm" asp-action="Index">Trở về</a>
        </form>
    </div>
</div>


